<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Streetlight Monitoring System</title>
	<link rel="icon" type="image/x-icon" href="~/images/favicon.ico" />
	<script src="https://cdn.tailwindcss.com"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link href="~/css/site.css" rel="stylesheet" />

	<style>
		.glass-card {
			background: rgba(255, 255, 255, 0.7);
			backdrop-filter: blur(12px);
			-webkit-backdrop-filter: blur(12px);
			border: 1px solid rgba(255, 255, 255, 0.18);
			box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
		}

		.dark .glass-card {
			background: rgba(17, 25, 40, 0.7);
			border: 1px solid rgba(255, 255, 255, 0.125);
		}

		.nav-glass {
			background: rgba(255, 255, 255, 0.1);
			backdrop-filter: blur(16px);
			-webkit-backdrop-filter: blur(16px);
			border-bottom: 1px solid #abb3c2;
		}

		.dark .nav-glass {
			background: rgba(17, 25, 40, 0.7);
			border-bottom: 1px solid rgba(255, 255, 255, 0.125);
		}

		.status-inactive {
			background-color: #dc2626; /* red-600 */
			box-shadow: 0 0 0 3px rgba(220, 38, 38, 0.2); /* red-600 with opacity */
		}

		.status-inactive {
			background-color: #16a34a;
			box-shadow: 0 0 0 3px rgba(22, 163, 74, 0.2);
		}

		.status-warning {
			background-color: #eab308;
			box-shadow: 0 0 0 3px rgba(234, 179, 8, 0.2);
		}

		.map-marker {
			position: absolute;
			width: 16px;
			height: 16px;
			border-radius: 50%;
			background: #2563eb;
			box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.3);
			transform: translate(-50%, -50%);
			z-index: 20;
		}

		.map-marker::after {
			content: "";
			position: absolute;
			width: 24px;
			height: 24px;
			border-radius: 50%;
			border: 2px solid #2563eb;
			opacity: 0.4;
			top: -4px;
			left: -4px;
			animation: ripple 2s infinite;
		}

		/* Base glass input */
		.input-glass {
			background: rgba(255, 255, 255, 0.7);
			backdrop-filter: blur(10px);
			-webkit-backdrop-filter: blur(10px);
			border: 1px solid rgba(0, 0, 0, 0.15);
			padding: 0.6rem 1rem;
			border-radius: 0.5rem;
			color: #111827; /* dark text for light mode */
			font-size: 0.95rem;
			transition: all 0.3s ease;
			width: 100%;
		}

		/* Focus effect (light mode) */
		.input-glass:focus {
			outline: none;
			border-color: #2563eb; /* blue-600 */
			box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.25);
		}

		/* Dark mode stays consistent with your theme */
		.dark .input-glass {
			background: rgba(17, 25, 40, 0.7);
			border: 1px solid rgba(255, 255, 255, 0.125);
			color: #f1f5f9; /* light text */
		}

		/* Focus effect (dark mode) */
		.dark .input-glass:focus {
			border-color: #3b82f6; /* blue-500 */
			box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.25);
		}
	</style>

	<script>
		tailwind.config = {
		  darkMode: "class",
		  theme: {
				extend: {
					colors: {
						primary: {
							50: '#eff6ff',
							100: '#dbeafe',
							200: '#bfdbfe',
							300: '#93c5fd',
							400: '#60a5fa',
							500: '#3b82f6',
							600: '#2563eb',
							700: '#1d4ed8',
							800: '#1e40af',
							900: '#1e3a8a'
						},
						secondary: {
							50: '#f0fdf4',
							100: '#dcfce7',
							200: '#bbf7d0',
							300: '#86efac',
							400: '#4ade80',
							500: '#22c55e',
							600: '#16a34a',
							700: '#15803d',
							800: '#166534',
							900: '#14532d'
						},
						accent: {
							50: '#fef2f2',
							100: '#fee2e2',
							200: '#fecaca',
							300: '#fca5a5',
							400: '#f87171',
							500: '#ef4444',
							600: '#dc2626',
							700: '#b91c1c',
							800: '#991b1b',
							900: '#7f1d1d'
						},
						success: {
							50: '#f0fdf4',
							100: '#dcfce7',
							200: '#bbf7d0',
							300: '#86efac',
							400: '#4ade80',
							500: '#22c55e',
							600: '#16a34a',
							700: '#15803d',
							800: '#166534',
							900: '#14532d'
						},
						warning: {
							50: '#fffbeb',
							100: '#fef3c7',
							200: '#fde68a',
							300: '#fcd34d',
							400: '#fbbf24',
							500: '#f59e0b',
							600: '#d97706',
							700: '#b45309',
							800: '#92400e',
							900: '#78350f'
						},
						danger: {
							50: '#fef2f2',
							100: '#fee2e2',
							200: '#fecaca',
							300: '#fca5a5',
							400: '#f87171',
							500: '#ef4444',
							600: '#dc2626',
							700: '#b91c1c',
							800: '#991b1b',
							900: '#7f1d1d'
						}
					}
				}
			}
		}
	</script>
</head>
<body class="from-primary-50 to-secondary-50 bg-gradient-to-br text-gray-800 dark:bg-gradient-to-br dark:from-gray-900 dark:to-gray-800 dark:text-gray-100">
	<header class="">
		@await Html.PartialAsync("_Navbar");
	</header>

	<div class="mt-[50px]">
		<main role="main" class="w-full pb-3">
			@RenderBody()
		</main>
	</div>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
