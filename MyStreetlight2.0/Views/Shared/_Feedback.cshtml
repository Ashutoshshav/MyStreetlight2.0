@if (TempData["SuccessFeedback"] != null)
{
	<div id="action-feedback"
		 class="-translate-x-1/2 fixed left-1/2 top-20 z-50 w-[90%] max-w-md rounded-xl border border-blue-300 bg-blue-100 p-3 text-center text-blue-800 shadow-lg transition dark:bg-blue-900/80 dark:text-blue-200 dark:border-blue-700/50">
		<div class="flex items-center justify-center gap-2">
			<i class="fas fa-info-circle text-lg"></i>
			<span class="font-medium">@TempData["SuccessFeedback"]</span>
		</div>
	</div>

	<script>
		setTimeout(() => {
			const feedback = document.getElementById("action-feedback");
			if (feedback) {
				feedback.classList.add("opacity-0", "translate-y-2");
				setTimeout(() => feedback.remove(), 500); // wait for fade-out
			}
		}, 3000); // show for 3 seconds
	</script>
}

